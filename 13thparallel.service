[Unit]
Description=13thparallel.com apache server
After=docker.service
Requires=docker.service

[Service]
User=core
Restart=always
TimeoutSec=180

ExecStartPre=/usr/bin/docker pull pupius/13thparallel.com
ExecStart=/usr/bin/docker run --rm --name thirteen -p 5007:80 pupius/13thparallel.com /usr/sbin/apache2ctl -D FOREGROUND
ExecStop=/usr/bin/docker rm -f thirteen

[Install]
WantedBy=multi-user.target
